<div class="container col-md-12" style="margin-top: 50px;">
  <div class="MainPanelHeading">
    <h3 class="" style="text-align: center; color:#eeeeee; font-family: 'Lobster', cursive;text-shadow: 2px 4px 3px rgba(0,0,0,0.3);">Оформить Заказ</h3>
  </div>
  <div class="panel-body" style="background: #E74C3C">
    <%= form_for(@order) do |f| %>
        <% if @order.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

              <ul>
                <% @order.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="" style=" box-shadow: 2px 4px 3px rgba(0,0,0,0.3);">
          <!--<label>Ваше имя:</label>-->
          <%= f.text_field :name, class: 'form-control' , placeholder: 'Ваше ФИО' %>
        </div><br>
        <div class="" style=" box-shadow: 2px 4px 3px rgba(0,0,0,0.3);">
          <!--<label>email:</label>-->
          <%= f.text_field :email, class: 'form-control' , placeholder: 'Ваш Email' %>
        </div><br>
        <div class="" style=" box-shadow: 2px 4px 3px rgba(0,0,0,0.3);">
          <!--<label>Номер телефона:</label>-->
          <%= f.text_field :phone, class: 'form-control' , placeholder: 'Ваш номер телефона' %>
        </div>
        <div class="actions">
          <input type="submit" name="commit" value="Заказать сейчас!" class="my_button" >
        </div></br>
    <% end %>
  </div>
</div>