<div class="col-md-4 col-sm-0"></div>
<div class="col-md-4 col-sm-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title" style="text-align: center">Вход</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs" style="margin-bottom: 20px ">
          <label>Email</label>
          <%= f.text_field :email, class: 'form-control',  required: false, autofocus: true %>
        </div>
        <div class="form-inputs" style="margin-bottom: 20px ">
          <label>Пароль</label>
          <%= f.password_field :password, class: 'form-control', required: false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-4 col-sm-0"></div>
<%= render "devise/shared/links" %>
